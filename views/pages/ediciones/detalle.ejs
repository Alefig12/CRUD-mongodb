<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
      <h3>ISBN:     <%= edicion[0].isbn %></h3>
      <div>
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
          <h4>Copias</h4>
          <a href="<%= edicion[0]._id %>/agregarCopia" class="btn btn-success btn" role="button" aria-disabled="true">Agregar Copia</a>
        </div>
          <table class="table">
              <thead>
                  <th scope="col-4">#</th>
                  <th scope="col-4">NÃºmero</th>
                  <th scope="col-4">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  <% 
                      let contador = 1;
  
                      edicion[0].copias.forEach(copia => { %>
                      <tr>
                          <td><%= contador++ %></td>
                          <td><%= copia.numero %></td>                        
                          <td><a href="./<%= edicion[0]._id %>/eliminarCopia/<%= copia._id %>" class="btn btn-danger">Eliminar</a></td>                        
                      </tr>
                 <% }); %> 
              </tbody>
            </table>
      </div>
    </div>
</main>
</body>
</html>