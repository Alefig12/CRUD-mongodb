<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
          <h3>Libros</h3>
        </div>
          <table class="table">
              <thead>
                <tr>
                  <th scope="col-4">#</th>
                  <th scope="col-4">Nombre</th>
                  <th scope="col-4">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  <% 
                      let contador = 1;
  
                      usuario[0].libros.forEach(libro => { %>
                      <tr>
                          <td><%= contador++ %></td>
                          <td><%= libro.titulo %></td>
                          <td>
                              <a href="/libros/<%= libro._id %>" class="btn btn-warning">Detalle</button>
                          </td>                        
                </tr>
                 <% }); %> 
                <tr>
              </tbody>
            </table>
      </div>

    <div class="container" style="padding-top: 20px;">
      <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
        <h3>Prestamos</h3>
        <a href="/prestamos/agregar" class="btn btn-success btn" role="button" aria-disabled="true">Agregar</a>
      </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col-4">#</th>
                <th scope="col-4">Fecha de prestamo</th>
                <th scope="col-4">Fecha de devoluci√≥n</th>
                <th scope="col-4">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% 
                    let contador2 = 1;

                    usuario[0].prestamos.forEach(prestamo => { %>
                    <tr>
                        <td><%= contador++ %></td>
                        <td><%= prestamo.fecha_prestamo %></td>
                        <td><%= prestamo.fecha_devolucion %></td>
                        <td>
                            <a href="/prestamos/<%= prestamo._id %>/actualizar" type="button" class="btn btn-info">Actualizar</button>
                            <a href="/prestamos/<%= prestamo._id %>/eliminar" class="btn btn-danger">Eliminar</button>
                            <a href="/prestamos/<%= prestamo._id %>" class="btn btn-warning">Detalle</button>
                        </td>                        
              </tr>
               <% }); %> 
              <tr>
            </tbody>
          </table>
    </div>
</main>
</body>
</html>