<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
      <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
        <h3>Usuarios</h3>
        <a href="usuarios/agregar" class="btn btn-success btn" role="button" aria-disabled="true">Agregar</a>
      </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">RUT</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% 
                    let contador = 1;

                    
                    usuarios.forEach(usuario => { %>
                    <tr>
                        <td><%= contador++ %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.RUT %> </td>
                        <td>
                            <a href="usuarios/<%= usuario._id %>/actualizar" type="button" class="btn btn-info">Actualizar</button>
                            <a href="usuarios/<%= usuario._id %>/eliminar" class="btn btn-danger">Eliminar</button>
                              <a href="usuarios/<%= usuario._id %>" class="btn btn-warning">Detalle</button>
                        </td>                        
              </tr>
               <% }); %> 
              <tr>
            </tbody>
          </table>

          
    </div>
</main>

  <script>
    function eliminar(id) {
      console.log(id);
    }
  </script>
</body>
</html>