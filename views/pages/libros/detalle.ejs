<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
      <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
        <h3>Libros</h3>
        <a href="<%= libro[0]._id %>/agregarAutor" class="btn btn-success btn" role="button" aria-disabled="true">Agregar Autor</a>
      </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col-4">#</th>
                <th scope="col-4">Nombre</th>
                <th scope="col-4">Acciones</th>
              </tr>
            </thead>
            <tbody>
                <% 
                    let contador = 1;

                    libro[0].autores.forEach(autor => { %>
                    <tr>
                        <td><%= contador++ %></td>
                        <td><%= autor.nombre %></td>                        
                        <td><a href="./<%= libro[0]._id %>/eliminarAutor/<%= autor._id %>" class="btn btn-danger">Eliminar</button></td>                        
              </tr>
               <% }); %> 
              <tr>
            </tbody>
          </table>

          
    </div>
</main>

  <script>
    function eliminar(id) {
      console.log(id);
    }
  </script>
</body>
</html>