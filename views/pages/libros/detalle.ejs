<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body>

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <div class="container" style="padding-top: 20px;">
      <h3><%= libro[0].titulo %></h3>
      <div>
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
          <h4>Autores</h4>
          <a href="<%= libro[0]._id %>/agregarAutor" class="btn btn-success btn" role="button" aria-disabled="true">Agregar Autor</a>
        </div>
          <table class="table">
              <thead>
                  <th scope="col-4">#</th>
                  <th scope="col-4">Nombre</th>
                  <th scope="col-4">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  <% 
                      let contador = 1;
  
                      libro[0].autores.forEach(autor => { %>
                      <tr>
                          <td><%= contador++ %></td>
                          <td><%= autor.nombre %></td>                        
                          <td><a href="./<%= libro[0]._id %>/eliminarAutor/<%= autor._id %>" class="btn btn-danger">Eliminar</a></td>                        
                      </tr>
                 <% }); %> 
              </tbody>
            </table>
      </div>
      
      <div>
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
          <h4>Ediciones</h4>
          <a href="<%= libro[0]._id %>/agregarEdicion" class="btn btn-success btn" role="button" aria-disabled="true">Agregar Edicion</a>
        </div>
        <table class="table">
              <thead>
                  <th scope="col-4">#</th>
                  <th scope="col-4">ISBN</th>
                  <th scope="col-4">AÃ±o</th>
                  <th scope="col-4">Idioma</th>
                  <th scope="col-4">Acciones</th>
                </tr>
              </thead>
              <tbody>
                  <% 
                      let contador2 = 1;
  
                      libro[0].ediciones.forEach(edicion => { %>
                      <tr>
                          <td><%= contador2++ %></td>
                          <td><%= edicion.isbn %></td>                        
                          <td><%= edicion.ano %></td>                        
                          <td><%= edicion.idioma %></td>                    
                          
                          <td>
                            <a href="../ediciones/<%= edicion._id %>" class="btn btn-warning">Copias</a>
                            <a href="./<%= libro[0]._id %>/eliminarEdicion/<%= edicion._id %>" class="btn btn-danger">Eliminar</a>
                            </td>                        
                      </tr>
                 <% }); %> 
              </tbody>
            </table>
      </div>
    </div>
</main>
</body>
</html>